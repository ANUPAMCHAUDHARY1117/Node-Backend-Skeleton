{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"extends": ["google", "eslint:recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["filenames"],
	"rules": {
		"quotes": ["error", "single", { "allowTemplateLiterals": true }],
		"no-tabs": 0,
		"indent": [2, "tab"],
		"object-curly-spacing": 0,
		"arrow-parens": 0,
		"linebreak-style": 0,
		"new-cap": 0,
		"filenames/match-regex": [2, "^[a-z-]+$", true],
		"max-len": [2, 120],
		"space-before-function-paren": [0, 1]
	}
}
